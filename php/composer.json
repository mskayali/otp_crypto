{
    "name": "mskayali/otp-crypto",
    "homepage": "https://github.com/mskayali/otp_crypto/tree/main/php",
    "description": "Time-windowed IV (OTP-like) AES-256-CBC + HMAC-SHA256 with HKDF-SHA256 for PHP, interoperable with the Dart client.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-openssl": "*",
        "ext-hash": "*"
    },
    "autoload": {
        "psr-4": {
            "OtpCrypto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OtpCrypto\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}